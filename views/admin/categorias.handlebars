<h2>Lista de categorias:</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success" >Nova categoria</button></a>
{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <h6>{{slug}}</h6>
            <small>{{data}}</small>
            <br><a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-secondary mt-4">Editar</button></a>
            <form action="/admin/categorias/deletar" method="post">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Deletar</button>
            </form>
        </div>
    </div>
{{else}}
    <h5 class="mt-4">Sem registro de categorias.</h5>
{{/each}}