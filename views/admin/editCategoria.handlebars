{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h3>Editar categoria</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/categorias/edit" method="post">
            <input type="hidden" name="id" value="{{categoria._id}}">
            <label for="nome">Nome: </label>
            <input type="text" name="nome" id="nome" placeholder="nome da categoria" value="{{categoria.nome}}" class="form-control">

            <br>

            <label for="slug">Slug:</label>
            <input type="text" name="slug" id="slug" placeholder="slug da categoria" value="{{categoria.slug}}"class="form-control">

            <br>

            <button type="submit" class="btn btn-success">Salvar</button>

        </form>
    </div>
</div>